<div class='conteiner'>
  <div class="row">

    <div class="col-xs-offset-1 col-xs-10">

     <% if @range == '1' %>

      <table class="table">

      	<thead>
      	  <tr>
      	  	<th>image</th>
      	  	<th>name</th>
      	  </tr>
      	</thead>

      	<tbody>
      	  <% @user.each do |user| %>
      	  <tr>
      	  	<td>
      	  	  <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
      	    </td>
      	    <td><%= user.name %></td>
      	    <td><%= link_to 'show', user_path(user) %></td>
      	  </tr>
      	  <% end %>
      	</tbody>

      </table>

      <% else %>


       <table class="table">

      	<thead>
      	  <tr>
      	  	<th>image</th>
      	  	<th>title</th>
      	  	<th>opinion</th>
      	  </tr>
      	</thead>

      	 <tbody>
      	  <% @book.each do |book| %>
      	  <tr>
      	  	<td>
      	  	  <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
      	    </td>
      	    <td><%= book.title %></td>
      	    <td><%= book.body %></td>
      	    <td><%= link_to 'show', user_path(book.user) %></td>
      	  </tr>
      	  <% end %>
      	</tbody>

       </table>

       <% end %>

    </div>

  </div>
</div>